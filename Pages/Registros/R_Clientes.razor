                        <InputText @bind-Value="cliente.Email" placeholder="Correro electronico" class="form-control" />
                        <ValidationMessage For="@(() => cliente.Email)" />
                    </div>
                </div>
                <br>

                @*...................... Cedula ......................*@

                <div class="row">
                    <div class="form-group col-3">
                        <label>
                            Cédula
